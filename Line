
public class Line {
	
	private int radius;
	private double angle;
	
	public int getRadius() {
		return radius;
	}
	public void setRadius(int radius) {
		this.radius = radius;
	}
	public double getAngle() {
		return angle;
	}
	public void setAngle(double angle) {
		this.angle = angle;
	}
	
	public Line() {
		radius = 150;
		angle = 0;
	}
	
	public int xcalc() {
		angle += Math.PI/100;
		double x = radius * Math.cos(angle); 
		return (int)x;
	}

	public int ycalc() {
		double y = radius * Math.sin(angle);
		return (int)y;
	}
	
	public static void main(String[] args) {
		
		Line a = new Line();
		
		System.out.println(a.getAngle());
		
		System.out.println(a.xcalc());
		System.out.println(a.ycalc());
		System.out.println(a.getAngle());
		
		System.out.println(a.xcalc());
		System.out.println(a.ycalc());
		System.out.println(a.getAngle());
		
		System.out.println(a.xcalc());
		System.out.println(a.ycalc());
		System.out.println(a.getAngle());
		
		System.out.println(a.xcalc());
		System.out.println(a.ycalc());
		System.out.println(a.getAngle());
		System.out.println(a.xcalc());
		System.out.println(a.ycalc());
		System.out.println(a.getAngle());
		System.out.println(a.xcalc());
		System.out.println(a.ycalc());
		System.out.println(a.getAngle());
		
		
		
	}
	
	
}
